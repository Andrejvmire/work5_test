{% extends 'base.html.twig' %}

{% block main %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">ФИО</th>
            <th scope="col">E-mail</th>
            <th scope="col">Логин</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="table-row" data-href="{{ [href, user.id]|join }}" style="cursor:pointer">
                <th scope="row">{{ loop.index }}</th>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.full_name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
      $(document).ready(function ($) {
        $('.table-row').click(function () {
          window.document.location = $(this).data('href');
        });
      })
    </script>
{% endblock %}